<div class="max-w-md  flex items-center justify-center text-center py-7 h-screen">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}

    {% else %}
      {% assign shop_url = section.settings.button_label %}
    {% endif %}
    <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-mudium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.button_label }}</a>
  </div>
</div>
{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "404 Heading Title",
        "default": "404"
      }, {
        "type": "text",
        "id": "subtext_title",
        "label": "404 subText Title",
        "default": "The page that you're looking for not found"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back To Home",
        "label": "Button Label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"

      }
    ]
  }
{% endschema %}